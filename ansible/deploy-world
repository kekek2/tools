---
- hosts: ting-repo
  vars:
    packages_all: /tmp/sets/pkg/All
    sets: /tmp/sets/sets
    version: 1.0.0
    abi: FreeBSD:10:amd64
    repo: /opt/ting-repo/{{abi}}/{{version}}

  tasks:

  - name: upload packages All
    synchronize: src={{ packages_all }} dest={{repo}} delete=yes
    
  - name: update repo
    command: /usr/sbin/pkg repo /opt/ting-repo/{{abi}}/{{version}}

  - name: upload base and kernel
    synchronize: src={{ sets }} dest=/opt/ting-repo

...
